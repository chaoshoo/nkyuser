        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:background="@drawable/input_no_border"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_login_pass"
                android:scaleType="fitXY"/>

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nextFocusDown="@+id/login_submit"
                android:nextFocusUp="@+id/login_phone"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="Please input a password"/>
        </LinearLayout>



        <Button
            android:id="@+id/login_submit"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:nextFocusUp="@+id/login_password"
            android:nextFocusDown="@+id/login_register"
            android:background="@drawable/submit_btn"
            android:textColor="@android:color/white"
            android:text="Sign in"/>

        <TextView
            android:id="@+id/login_register"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:nextFocusUp="@+id/login_submit"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@android:color/white"
