<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item"
    android:layout_margin="20dp"
    android:padding="10dp"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/doctor_item_protrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_user" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/doctor_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="于世龙"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/doctor_item_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="心血管内科"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/doctor_item_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="华中科技大学吧啦啦啦啦啦啦啦啦啦啦"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/doctor_item_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/doctor_item_operator"
        android:layout_below="@+id/doctor_item_info"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier="1.5"
        android:text="的减肥快说句话上课就发货看世界是空姐开始激动海口市反馈是交换机的"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
</LinearLayout>