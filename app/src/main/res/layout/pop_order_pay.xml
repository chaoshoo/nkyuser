<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg"
    android:gravity="center_horizontal"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:text="请用微信扫描支付（成功后请点击完成支付）"/>
    
    <ImageView
        android:id="@+id/pop_order_pay_erweima"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pop_order_pay_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/blue_btn"
            android:text="完成支付"
            android:nextFocusUp="@+id/pop_order_operation_close"
            android:nextFocusRight="@+id/pop_order_operation_cancel"/>

        <Button
            android:id="@+id/pop_order_pay_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/cyan_btn"
            android:text="暂不支付"
            android:nextFocusUp="@+id/pop_order_operation_close"
            android:nextFocusLeft="@+id/pop_order_operation_yes"/>
    </LinearLayout>

</LinearLayout>